<div class="fridge">
  <div class="inner_fridge">

    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field-top">
      <%= f.email_field :email, placeholder: 'email', autofocus: true %></div>

      <div class="field-bottom">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %></div>

      <% if devise_mapping.rememberable? -%>
        <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div class="submit_button"><%= f.submit "Log in" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>